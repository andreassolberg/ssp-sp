{
	"apiVersion": "extensions/v1beta1",
	"kind": "Deployment",
	"metadata": {
		"name": "feidespdev"
	},
	"spec": {
		"replicas": 1,
		"strategy": {
			"type": "RollingUpdate",
			"rollingUpdate": {
				"maxUnavailable": 0,
				"maxSurge": 1
			}
		},
		"template": {
			"metadata": {
				"labels": {
					"app": "feidespdev",
					"appid": "feidespdev"
				}
			},
			"spec": {
				"containers": [{
					"name": "feidespdev",
					"image": "eu.gcr.io/turnkey-cocoa-720/feidespdev:1.0.0",
					"resources": {
						"requests": {
							"cpu": "10m",
							"memory": "200Mi"
						},
						"limits": {
							"memory": "800Mi"
						}
					},
					"env": [
            {
  						"name": "ADMINPASSWD",
  						"valueFrom": {
                "secretKeyRef": {
                  "name": "feideidpdev",
                  "key": "ADMINPASSWD"
                }
              }
  					},
            {
  						"name": "SSP_SALT",
              "valueFrom": {
                "secretKeyRef": {
                  "name": "feideidpdev",
                  "key": "SSP_SALT"
                }
              }
  					},
						{
  						"name": "HOST",
              "value": "sp.andreas.labs.uninett.no"
  					}
          ],
					"imagePullPolicy": "Always",
					"ports": [{
						"containerPort": 80
					}]
				}],
				"restartPolicy": "Always"
			}
		}
	}
}
